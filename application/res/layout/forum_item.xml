<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="8dip"
    >
    <ImageView
        android:id="@+id/sticky_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginRight="4dip"
        android:src="@drawable/sticky"
        android:visibility="gone"
        />
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/sticky_icon"
        android:layout_toLeftOf="@+id/selector"
		>
		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
			android:textSize="18dip"
			android:textStyle="bold"
			android:textColor="@color/forum_title"
            android:layout_alignParentLeft="true"
			/>
		<TextView
			android:id="@+id/subtext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/title"
			android:textSize="16dip"
			android:textColor="@color/secondary_post_font"
            android:layout_alignParentLeft="true"
			/>
	</RelativeLayout>

    <TextView
        android:id="@+id/selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dip"
        android:layout_marginLeft="4dip"
        android:layout_centerVertical="true"
		android:textSize="24dip"
		android:textStyle="bold"
        android:text=">"
		android:textColor="@color/secondary_post_font"
        android:visibility="gone" />

</RelativeLayout>
